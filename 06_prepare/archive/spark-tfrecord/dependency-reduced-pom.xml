  <version>0.1.1</version>
  <description>TensorFlow TFRecord data source for Apache Spark</description>
  <url>https://github.com/linkedin/spark-tfrecord</url>
  <scm>
    <connection>git@github.com:linkedin/spark-tfrecord.git</connection>
    <developerConnection>scm:git:https://github.com/linkedin/spark-tfrecord.git</developerConnection>
    <url>https://github.com/linkedin/spark-tfrecord.git</url>
  </scm>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>net.alchim31.maven</groupId>
          <artifactId>scala-maven-plugin</artifactId>
          <version>${scala.maven.version}</version>
          <executions>
            <execution>
              <id>compile</id>
              <goals>
                <goal>add-source</goal>
                <goal>compile</goal>
              </goals>
              <configuration>
                <jvmArgs>
                  <jvmArg>-Xms256m</jvmArg>
                  <jvmArg>-Xmx512m</jvmArg>
                </jvmArgs>
                <args>
                  <arg>-g:vars</arg>
                  <arg>-deprecation</arg>
                  <arg>-feature</arg>
                  <arg>-unchecked</arg>
                  <arg>-Xfatal-warnings</arg>
                  <arg>-language:implicitConversions</arg>
                  <arg>-language:existentials</arg>
                </args>
              </configuration>
            </execution>
            <execution>
              <id>test</id>
              <goals>
                <goal>add-source</goal>
                <goal>testCompile</goal>
              </goals>
            </execution>
            <execution>
              <id>attach-javadocs</id>
              <goals>
                <goal>doc-jar</goal>
              </goals>
            </execution>
          </executions>
          <inherited>true</inherited>
          <configuration>
            <recompileMode>incremental</recompileMode>
            <useZincServer>true</useZincServer>
            <scalaVersion>${scala.binary.version}</scalaVersion>
            <checkMultipleScalaVersions>false</checkMultipleScalaVersions>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.scalatest</groupId>
          <artifactId>scalatest-maven-plugin</artifactId>
          <version>${scalatest.maven.version}</version>
          <executions>
            <execution>
              <id>scalaTest</id>
              <phase>test</phase>
              <goals>
                <goal>test</goal>
              </goals>
            </execution>
          </executions>
          <inherited>true</inherited>
        </plugin>
        <plugin>
          <artifactId>maven-shade-plugin</artifactId>
          <version>3.1.0</version>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>shade</goal>
              </goals>
              <configuration>
                <minimizeJar>true</minimizeJar>
                <artifactSet>
                  <includes>
                    <include>com.google.protobuf:protobuf-java</include>
                    <include>org.tensorflow:tensorflow-hadoop</include>
                    <include>org.tensorflow:proto</include>
                  </includes>
                </artifactSet>
                <filters>
                  <filter>
                    <artifact>com.google.protobuf:protobuf-java</artifact>
                    <excludes>
                      <exclude>**/*.java</exclude>
                    </excludes>
                  </filter>
                </filters>
                <relocations>
                  <relocation>
                    <pattern>com.google.protobuf</pattern>
                    <shadedPattern>com.linkedin.spark.shaded.com.google.protobuf</shadedPattern>
                  </relocation>
                  <relocation>
                    <pattern>org.tensorflow.hadoop</pattern>
                    <shadedPattern>com.linkedin.spark.shaded.org.tensorflow.hadoop</shadedPattern>
                  </relocation>
                  <relocation>
                    <pattern>org.tensorflow.example</pattern>
                    <shadedPattern>com.linkedin.spark.shaded.org.tensorflow.example</shadedPattern>
                  </relocation>
                </relocations>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <artifactId>maven-gpg-plugin</artifactId>
          <version>1.5</version>
          <executions>
            <execution>
              <id>sign-artifacts</id>
              <phase>verify</phase>
              <goals>
                <goal>sign</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
      </plugin>
